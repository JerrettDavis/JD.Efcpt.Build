{
  "$schema": "http://json.schemastore.org/template",
  "author": "Jerrett Davis",
  "classifications": [ "Database", "EntityFramework", "EFCore" ],
  "identity": "JD.Efcpt.Build.Project",
  "name": "EF Core Power Tools SDK Project",
  "description": "A project that uses JD.Efcpt.Sdk to automatically generate EF Core models from a database project during build",
  "shortName": "efcptbuild",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "EfcptProject",
  "preferNameDirectory": true,
  "sources": [
    {
      "source": "./",
      "target": "./",
      "exclude": [ 
        ".template.config/**/*",
        "**/*.filelist",
        "**/*.user",
        "**/*.lock.json",
        "**/.vs/**/*"
      ]
    }
  ],
  "symbols": {
    "Framework": {
      "type": "parameter",
      "description": "The target framework for the project.",
      "datatype": "choice",
      "choices": [
        {
          "choice": "net8.0",
          "description": "Target .NET 8.0"
        },
        {
          "choice": "net9.0",
          "description": "Target .NET 9.0"
        },
        {
          "choice": "net10.0",
          "description": "Target .NET 10.0"
        }
      ],
      "replaces": "net8.0",
      "defaultValue": "net8.0"
    },
    "EFCoreVersion": {
      "type": "computed",
      "value": "(Framework == \"net10.0\" ? \"10.0.*\" : \"9.0.*\")"
    },
    "ToolVersion": {
      "type": "computed",
      "value": "(Framework == \"net10.0\" ? \"not required\" : (Framework == \"net9.0\" ? \"9.*\" : \"8.*\"))"
    }
  },
  "primaryOutputs": [
    {
      "path": "EfcptProject.csproj"
    }
  ]
}
