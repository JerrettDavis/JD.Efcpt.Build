<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net8.0;net9.0;net10.0</TargetFrameworks>
    <IsPackable>true</IsPackable>
    <PackageId>JD.Efcpt.Build</PackageId>
    <Version>0.1.0</Version>
    <Authors>Internal</Authors>
    <Description>MSBuild targets + tasks to generate EF Core models from a sqlproj DACPAC using efcpt.</Description>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>

    <!-- This project is just for packing build assets -->
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <NoWarn>$(NoWarn);NU5128</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\JD.Efcpt.Build.Tasks\JD.Efcpt.Build.Tasks.csproj" ReferenceOutputAssembly="false" />
  </ItemGroup>

  <!-- Ship MSBuild assets -->
  <ItemGroup>
    <None Include="build\JD.Efcpt.Build.props" Pack="true" PackagePath="build\" />
    <None Include="build\JD.Efcpt.Build.targets" Pack="true" PackagePath="build\" />
    <None Include="buildTransitive\JD.Efcpt.Build.props" Pack="true" PackagePath="buildTransitive\" />
    <None Include="buildTransitive\JD.Efcpt.Build.targets" Pack="true" PackagePath="buildTransitive\" />
  </ItemGroup>

  <!-- Ship task assembly into /tasks/net8.0/ -->
  <ItemGroup>
    <None Include="$(MSBuildThisFileDirectory)..\JD.Efcpt.Build.Tasks\bin\$(Configuration)\$(TargetFramework)\JD.Efcpt.Build.Tasks.dll"
          Condition="Exists('$(MSBuildThisFileDirectory)..\JD.Efcpt.Build.Tasks\bin\$(Configuration)\$(TargetFramework)\JD.Efcpt.Build.Tasks.dll')"
          Pack="true"
          PackagePath="tasks\$(TargetFramework)\" />
  </ItemGroup>

  <!-- Ship default content (optional, but helpful for non-resource fallback) -->
  <ItemGroup>
    <Content Include="defaults\**\*.*" Pack="true" PackagePath="contentFiles\any\any\Defaults\" />
  </ItemGroup>

</Project>
